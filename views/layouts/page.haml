!!! Strict
%html{html_attrs('en-en')}
  %head
    %meta{:'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => "lang", :content => "en"}
    %title Stay with a Local | RailsConf | B'more on Rails
    %link{:href => url_for('/stylesheets/grid.css'), :rel => 'stylesheet', :media => "screen", :type => "text/css"}
    %link{:href => url_for('/stylesheets/text.css'), :rel => 'stylesheet', :media => "screen", :type => "text/css"}
    %link{:href=> url_for('/bmoreonrails.css'), :rel => 'stylesheet', :media => "screen", :type => "text/css"}
    %link{:href => url_for('/stylesheets/application.css'), :rel => 'stylesheet', :media => "screen", :type => "text/css"}
    %script{:type => "text/javascript", :src => url_for("/javascripts/lib/jquery-1.3.2.min.js")}
    %script{:type => "text/javascript", :src => url_for("/javascripts/site.js")}
    %script{:type => "text/javascript", :src => "http://maps.google.com/maps/api/js?sensor=false"}
  %body
    .container_12
      - if flash[:notice]
        #notice= flash[:notice]
      - if flash[:error]
        #error= flash[:error]

    - if logged_in?
      #status.container_12
        You are logged in as #{guest_name}
        %a{:href => url_for('/logout')} Sign out
    
    #content.container_12.clear
      = yield
    %br.clear
    #footer.container_12
      %hr
      %p
        Site created by <a href='http://smartlogicsolutions.com/john'>John Trupiano</a>, <a href='http://jonathanjulian.com/about/'>Jonathan Julian</a>, and <a href='http://paulbarry.com'>Paul Barry</a>.
        %br
        Code is open sourced at <a href="http://github.com/jtrupiano/stay_with_a_local">GitHub</a>.
        %br
        Site is hosted by <a href='http://smartlogicsolutions.com'>SmartLogic</a>.
        %br
        Also don't forget to check out <a href='http://bohconf.com'>BohConf</a>, the official unconf of <a href="http://railsconf.com">RailsConf 2010</a>.
        %br
        %a{:href => 'http://bohconf.com'}
          %img{:src => url_for("/images/boh_50.png"), :title => "BohConf, the official unconf of RailsConf 2010", :alt => "BohConf, the official unconf of RailsConf"}
        %a{:href => 'http://bmoreonrails.org'}
          %img{:src => url_for("/images/bmore-on-rails-50.png"), :title => "B'more on Rails, Baltimore's Ruby Users Group", :alt => "B'more on Rails, Baltimore's Ruby Users Group"}
        %a{:href => 'http://igniterailsconf.com'}
          %img{:src => url_for("/images/ignite-railsconf-50.png"), :title => "Ignite RailsConf", :alt => "Ignite RailsConf"}
    = partial :_analytics
    